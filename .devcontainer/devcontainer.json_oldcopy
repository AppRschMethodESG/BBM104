
{
    "name": "R Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "REditorSupport.r",
        "ms-python.python"
    ],
    // Moved to here the creation of the R_Library directory and the installation of the withr and languageserver packages to the postCreateCommand in the devcontainer.json file. This way, the necessary setup will be done after the container is created, ensuring that the R_Library directory is available and the packages are installed correctly.
    "postCreateCommand": "mkdir -p /workspaces/BBM104/R_Library && sudo chown -R vscode:vscode /workspaces/BBM104/R_Library && sudo chmod -R 777 /workspaces/BBM104/R_Library && R -e \".libPaths(c('/workspaces/BBM104/R_Library', .libPaths())); install.packages(c('withr', 'languageserver'), lib='/workspaces/BBM104/R_Library', repos='http://cran.rstudio.com/')\"",
    "remoteUser": "vscode"
}